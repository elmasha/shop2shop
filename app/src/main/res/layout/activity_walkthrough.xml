<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.WalkThroughActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">




        <ImageView
            android:layout_width="250dp"
            android:src="@drawable/delis"
            android:layout_margin="20dp"
            android:layout_gravity="center"
            android:layout_height="290dp"/>


        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="12dp"
                android:layout_margin="10dp"
                android:paddingBottom="20dp"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:background="@color/primary"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome to shop2shop"
                        android:textSize="25sp"
                        android:textStyle="bold"
                        android:paddingTop="20dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"/>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley"
                        android:textSize="15sp"
                        android:textAlignment="center"
                        android:layout_margin="28dp"
                        android:padding="0dp"
                        android:textColor="@color/white"
                        android:layout_gravity="center_horizontal"/>


                    <Button
                        android:id="@+id/GetStarted"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_margin="20dp"
                        android:background="@drawable/btn_round_white"
                        android:text="Get Started"
                        android:textColor="@color/secondary"
                        android:textSize="16dp"
                        android:textStyle="bold" />

                </LinearLayout>


            </androidx.cardview.widget.CardView>

        </androidx.core.widget.NestedScrollView>





    </LinearLayout>



</RelativeLayout>